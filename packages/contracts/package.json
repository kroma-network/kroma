{
  "name": "@kroma/contracts",
  "version": "1.0.0",
  "description": "Contracts for Kroma",
  "main": "dist/index",
  "types": "dist/index",
  "license": "MIT",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/types/**/*.ts",
    "artifacts/contracts/**/*.json",
    "deployments/**/*.json",
    "contracts/**/*.sol"
  ],
  "scripts": {
    "bindings": "cd ../../bindings && make",
    "build:forge": "forge build",
    "build:with-metadata": "FOUNDRY_PROFILE=echidna pnpm build:forge",
    "prebuild": "pnpm ts-node scripts/verify-foundry-install.ts",
    "build": "hardhat compile && pnpm autogen:artifacts && pnpm build:ts && pnpm typechain",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:go-ffi": "(cd scripts/go-ffi && go build)",
    "autogen:artifacts": "ts-node scripts/generate-artifacts.ts",
    "autogen:invariant-docs": "ts-node scripts/invariant-doc-gen.ts",
    "deploy": "hardhat deploy",
    "test": "pnpm build:go-ffi && forge test",
    "coverage": "pnpm build:go-ffi && forge coverage",
    "coverage:lcov": "pnpm build:go-ffi && forge coverage --report lcov",
    "gas-snapshot": "pnpm build:go-ffi && forge snapshot --no-match-test \"testDiff|testFuzz|invariant|generateArtifact\"",
    "storage-snapshot": "bash ./scripts/storage-snapshot.sh",
    "validate-spacers": "hardhat compile && hardhat validate-spacers",
    "slither": "bash ./scripts/slither.sh",
    "slither:triage": "TRIAGE_MODE=1 bash ./scripts/slither.sh",
    "clean": "rm -rf ./dist ./artifacts ./forge-artifacts ./cache ./tsconfig.tsbuildinfo ./tsconfig.build.tsbuildinfo ./src/contract-artifacts.ts ./test-case-generator/fuzz",
    "lint:ts:check": "eslint . --max-warnings=0",
    "lint:forge-tests:check": "ts-node scripts/forge-test-names.ts",
    "lint:contracts:check": "pnpm solhint -f table 'contracts/**/*.sol' && pnpm prettier --check 'contracts/**/*.sol' && pnpm lint:forge-tests:check",
    "lint:check": "pnpm lint:contracts:check && pnpm lint:ts:check",
    "lint:ts:fix": "eslint --fix .",
    "lint:contracts:fix": "pnpm solhint --fix 'contracts/**/*.sol' && pnpm prettier --write 'contracts/**/*.sol'",
    "lint:fix": "pnpm lint:contracts:fix && pnpm lint:ts:fix",
    "lint": "pnpm lint:fix && pnpm lint:check",
    "typechain": "typechain --target ethers-v5 --out-dir dist/types --glob \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\"",
    "echidna:aliasing": "echidna-test --contract EchidnaFuzzAddressAliasing --config ./echidna.yaml .",
    "echidna:burn:gas": "echidna-test --contract EchidnaFuzzBurnGas --config ./echidna.yaml .",
    "echidna:burn:eth": "echidna-test --contract EchidnaFuzzBurnEth --config ./echidna.yaml .",
    "echidna:encoding": "echidna-test --contract EchidnaFuzzEncoding --config ./echidna.yaml .",
    "echidna:portal": "echidna-test --contract EchidnaFuzzKromaPortal --config ./echidna.yaml .",
    "echidna:hashing": "echidna-test --contract EchidnaFuzzHashing --config ./echidna.yaml .",
    "echidna:metering": "echidna-test --contract EchidnaFuzzResourceMetering --config ./echidna.yaml ."
  },
  "dependencies": {
    "@kroma/core-utils": "1.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "circomlibjs": "^0.1.7",
    "ethers": "^5.7.0",
    "hardhat": "^2.9.6"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.2",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@foundry-rs/easy-foundryup": "^0.1.3",
    "@foundry-rs/hardhat-forge": "^0.1.17",
    "@kroma/hardhat-deploy-config": "1.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@rari-capital/solmate": "https://github.com/transmissions11/solmate.git#8f9b23f8838670afda0fd8983f2c41e8037ae6bc",
    "@typechain/ethers-v5": "^10.1.0",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "bip39": "^3.0.4",
    "chai": "^4.2.0",
    "command-exists": "1.2.9",
    "dotenv": "^16.0.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#9310e879db8ba3ea6d5c6489a579118fd264a3f5",
    "ethereum-waffle": "^3.0.0",
    "ethereumjs-wallet": "^1.0.2",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#46264e9788017fc74f9f58b7efa0bc6e1df6d410",
    "glob": "^7.1.6",
    "hardhat-deploy": "^0.11.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.9.3"
  }
}
